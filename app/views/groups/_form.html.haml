= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :isAnonymous
    = f.check_box :isAnonymous
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :comments_for_advertisement
    = f.text_area :comments_for_advertisement
  .field
    = f.label :advertise_for_partners
    = f.check_box :advertise_for_partners
  .actions
    = f.submit 'Save'
